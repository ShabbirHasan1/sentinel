#!/usr/bin/env bash
#MISE description="Build the mdBook documentation"

set -e

# Colors for output
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

cd "$(dirname "$0")/../.." # Navigate to project root

echo -e "${YELLOW}Building Sentinel documentation...${NC}"

# Check if mdbook exists
if ! command -v mdbook &> /dev/null; then
    echo -e "${RED}Error: mdBook is not installed${NC}"
    echo -e "${YELLOW}Run 'mise run book-install' to install mdBook${NC}"
    exit 1
fi

# Build the documentation
cd book
mdbook build

if [ -d "book" ]; then
    echo -e "${GREEN}✓ Documentation built successfully!${NC}"
    echo -e "${YELLOW}  Output directory: book/book/${NC}"

    # Show size of built documentation
    SIZE=$(du -sh book 2>/dev/null | cut -f1)
    echo -e "${BLUE}  Documentation size: ${SIZE}${NC}"
else
    echo -e "${RED}✗ Documentation build failed${NC}"
    exit 1
fi
