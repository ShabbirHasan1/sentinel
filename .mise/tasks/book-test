#!/usr/bin/env bash
#MISE description="Test mdBook documentation for broken links and issues"
#MISE depends=["book-build"]

set -e

# Colors for output
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

cd "$(dirname "$0")/../.." # Navigate to project root

echo -e "${BLUE}Testing Sentinel documentation...${NC}"

# Check if mdbook exists
if ! command -v mdbook &> /dev/null; then
    echo -e "${RED}Error: mdBook is not installed${NC}"
    echo -e "${YELLOW}Run 'mise run book-install' to install mdBook${NC}"
    exit 1
fi

# Navigate to book directory
cd book

echo -e "${YELLOW}→ Running mdBook tests...${NC}"

# Run mdBook test command
if mdbook test; then
    echo -e "${GREEN}✓ All documentation tests passed!${NC}"
else
    echo -e "${RED}✗ Documentation tests failed${NC}"
    exit 1
fi

# Check for broken internal links if linkcheck is available
if command -v mdbook-linkcheck &> /dev/null; then
    echo -e "${YELLOW}→ Checking for broken links...${NC}"
    mdbook-linkcheck || echo -e "${YELLOW}  ⚠ Some links may be broken${NC}"
fi

# Count statistics
echo
echo -e "${BLUE}Documentation Statistics:${NC}"
echo -e "${YELLOW}  Total MD files: $(find src -name '*.md' | wc -l)${NC}"
echo -e "${YELLOW}  Total chapters: $(grep -c '^-' src/SUMMARY.md)${NC}"
echo -e "${YELLOW}  Total lines: $(find src -name '*.md' -exec wc -l {} + | tail -1 | awk '{print $1}')${NC}"
echo -e "${YELLOW}  Total words: $(find src -name '*.md' -exec wc -w {} + | tail -1 | awk '{print $1}')${NC}"

echo -e "${GREEN}✓ Documentation testing complete${NC}"
