#!/usr/bin/env bash
#MISE description="Watch documentation source files and rebuild on changes"
#MISE depends=["book-install"]

set -e

# Colors for output
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

cd "$(dirname "$0")/../.." # Navigate to project root

echo -e "${BLUE}Starting documentation file watcher...${NC}"

# Check if mdbook exists
if ! command -v mdbook &> /dev/null; then
    echo -e "${RED}Error: mdBook is not installed${NC}"
    echo -e "${YELLOW}Run 'mise run book-install' to install mdBook${NC}"
    exit 1
fi

# Navigate to book directory
cd book

echo -e "${GREEN}âœ“ Watching for changes in documentation${NC}"
echo -e "${YELLOW}  Source directory: book/src/${NC}"
echo -e "${YELLOW}  Output directory: book/book/${NC}"
echo -e "${YELLOW}  Auto-rebuild: Enabled${NC}"
echo -e "${BLUE}  Press Ctrl+C to stop${NC}"
echo
echo -e "${YELLOW}Note: This only rebuilds the documentation.${NC}"
echo -e "${YELLOW}      For live preview, use 'mise run book-serve' instead.${NC}"
echo

# Start watching for changes
exec mdbook watch
